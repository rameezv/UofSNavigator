<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:id="@+id/main"
    tools:context=".MainActivity"
    android:clickable="true"
    android:background="#ffffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:background="#ff2b2b2b">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:hint="Search"
            android:textColorHint="#ffaaaaaa"
            android:textColor="#ffdddddd"
            android:id="@+id/txtSearch"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:inputType="text"
            android:textIsSelectable="false"
            android:textSize="28sp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:paddingTop="10dp"
            android:editable="true"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/btnSearch"
            android:background="#00000000"
            android:textColor="#ffdddddd"
            android:longClickable="true"
            android:src="@drawable/abc_ic_search_api_mtrl_alpha"
            android:scaleType="fitCenter"
            android:padding="10dp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="70dp"
        android:id="@+id/maparea"
        >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/thorv1"
            android:id="@+id/mapview"
            android:padding="0dp" />
        <!--class="com.rameezvirji.uofsnavigator.TouchImageView"-->

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/pin"
            android:id="@+id/pinImage"
            android:scaleType="matrix"
            android:visibility="invisible"
            android:contentDescription="Map"
            android:padding="0dp" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-70dp"
        android:background="#ff2b2b2b"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="First Floor"
            android:id="@+id/btnDown"
            android:background="#00000000"
            android:textColor="#ffdddddd"
            android:padding="20dp"
            android:clickable="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Second Floor"
            android:id="@+id/btnUp"
            android:background="#00000000"
            android:textColor="#ffdddddd"
            android:padding="20dp"
            android:clickable="true" />

    </LinearLayout>

</LinearLayout>
